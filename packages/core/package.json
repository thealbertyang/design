{
  "name": "@once-ui-system/core",
  "version": "1.5.4",
  "description": "Once UI for Next.js NPM package",
  "keywords": [
    "once-ui",
    "react",
    "nextjs",
    "scss",
    "design system",
    "design framework",
    "nextjs design system"
  ],
  "author": "Once UI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/once-ui-system/core.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/once-ui-system/core/issues"
  },
  "homepage": "https://docs.once-ui.com",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.js"
    },
    "./contexts": {
      "import": "./dist/contexts/index.js",
      "require": "./dist/contexts/index.js"
    },
    "./modules": {
      "import": "./dist/modules/index.js",
      "require": "./dist/modules/index.js"
    },
    "./icons": {
      "import": "./dist/icons/index.js",
      "require": "./dist/icons/index.js"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./interfaces": {
      "import": "./dist/interfaces/index.js",
      "require": "./dist/interfaces/index.js"
    },
    "./css/styles.css": "./dist/css/styles.css",
    "./css/tokens.css": "./dist/css/tokens.css",
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js"
    }
  },
  "scripts": {
    "build": "bun run clean && bun run generate-emoji-data && tsc --project tsconfig.build.json && bun run copy-files && bun run build:css",
    "build:css": "sass src/styles/index.scss:dist/css/styles.css src/tokens/index.scss:dist/css/tokens.css --style=compressed",
    "copy-files": "node scripts/copy-files.js",
    "clean": "rimraf dist",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch --preserveWatchOutput",
    "generate-emoji-data": "node scripts/generate-emoji-data.js"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^2.1.1",
    "classnames": "^2.5.1",
    "compressorjs": "^1.2.1",
    "date-fns": "^4.1.0",
    "prismjs": "^1.30.0",
    "recharts": "^2.15.1"
  },
  "peerDependencies": {
    "next": ">=13.4",
    "react": ">=18",
    "react-dom": ">=18",
    "sass": "^1.77.6",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "20.17.23",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "rimraf": "^5.0.10",
    "typescript": "5.8.2"
  },
  "overrides": {
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2"
  }
}
