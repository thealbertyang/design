{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"sourceMap": true,
		"noEmit": false,
		"module": "ES2022",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "src/**/*.json"],
	"exclude": ["node_modules", "dist", "**/*.test.*", "**/*.stories.*"]
}
